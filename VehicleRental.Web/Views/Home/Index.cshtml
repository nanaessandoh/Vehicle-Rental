@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner/1.jpg" alt="Banner1" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner/2.jpg" alt="Banner2" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner/3.jpg" alt="Banner3" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner/4.jpg" alt="Banner4" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="thumbnail">
            <a asp-controller="Catalog" asp-action="Index">
                <img class="card-img" src="~/images/home/1.jpg" alt="Vehicle Inventory">
            </a>
            <div class="caption">
                <h3>Vehicle Inventory</h3>
                <a class="card-link" asp-controller="Catalog" asp-action="Index">View and Manage Vehicle Inventory</a>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="thumbnail">
            <a asp-controller="Patron" asp-action="Index">
                <img class="card-img-top" src="~/images/home/2.jpg" alt="Customers">
            </a>
            <div class="caption">
                <h3>Customers</h3>
                <a class="card-link" asp-controller="Patron" asp-action="Index">View and Manage Customers</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="thumbnail">
            <a asp-controller="Branch" asp-action="Index">
                <img class="card-img-top" src="~/images/home/3.jpg" alt="Branch">
            </a>
            <div class="caption">
                <h3>Branches</h3>
                <a class="card-link" asp-controller="Branch" asp-action="Index">View and Manage Branches</a>
            </div>
        </div>
    </div>

</div>
